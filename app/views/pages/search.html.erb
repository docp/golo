<div>
  <%= form_tag search_path, :method => 'get' do %>
    <div class = "field">
      <%= text_field_tag :search, params[:search] %><br />
    </div>
    <div class = "actions">
      <%= submit_tag "Search", :name => nil %>
    </div>
  <% end %>
  <div>
    <% if @users.nil? %>
    <% else %>
      <% @users.each do |user| %>
        <%= link_to user.name, user_path(user.id) %>
        <%# create button for adding user %>
        <%# link_to "User adden", current_user.relationships.create!(:followed_id => user.id) %>
      <% end %>
    <% end %>
  </div>
</div>

