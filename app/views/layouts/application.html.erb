<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>

    <div id="page">
      <div id="navigation">
        <%= render "layouts/navigation" %>
      </div>
      <% flash.each do |key, value| %>
        <div class = "flash <%= key %>" %>
        <%= value %>
        </div>
      <% end %>
      <div id="content">

        <%= yield %>
      </div>

      <div id="footer">
        <%= render "layouts/footer" %>
        &copy; Willytown Connections Inc.
      </div>
    </div>
  </body>
</html>

